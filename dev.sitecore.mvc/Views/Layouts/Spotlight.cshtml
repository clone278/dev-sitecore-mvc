@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using dev.sitecore.mvc;
@model RenderingModel

<div class="highlight">
    @Html.Sitecore().Field("Image", Model.Item, new { mw = 300, mh = 400, hspace = 10, vspace = 10, @class = "test" })
    <p>Make: @Html.Sitecore().Field("Make", Model.Item)</p>
    <p>Model: @Html.Sitecore().Field("Model", Model.Item)</p>
    <p>@Html.Sitecore().Field("Link", Model.Item, new { text = "newlink" })</p>
    <p>@Html.Sitecore().Field("__Created", Model.Item, new { format = "dd-MMM-yy" })</p>
    <p>@Html.Sitecore().ImageField("Image", Model.Item, 300, 400, true )</p>
</div>
